<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.siyamed.shapeimageview.BubbleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher"
            app:siArrowPosition="right"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher"
            app:siBorderAlpha="0.5"
            app:siBorderColor="#ff8888"
            app:siBorderWidth="8dp"
            app:siRadius="8dp"
            app:siSquare="true" />

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher"
            app:siBorderAlpha="0.6"
            app:siBorderColor="#222299"
            app:siBorderWidth="8dp" />

        <com.github.siyamed.shapeimageview.DiamondImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher"
            app:siBorderColor="#889922"
            app:siBorderWidth="8dp" />

        <com.github.siyamed.shapeimageview.PentagonImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher"
            app:siBorderColor="#8f1922"
            app:siBorderWidth="8dp" />

        <com.github.siyamed.shapeimageview.HexagonImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher"
            app:siBorderColor="#8f1922"
            app:siBorderWidth="8dp" />

    </LinearLayout>


</ScrollView>
