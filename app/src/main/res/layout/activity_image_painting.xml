<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leeeyou="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ly.cc.custom_controls.imagePainting.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/roundimage1" />
bystander
        <com.ly.cc.custom_controls.imagePainting.RoundImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:src="@drawable/roundimage2" />

        <com.ly.cc.custom_controls.imagePainting.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/roundimage2"
            leeeyou:borderRadius="60dp"
            leeeyou:type="round" />

        <com.ly.cc.custom_controls.imagePainting.RoundImageView
            android:id="@+id/riv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/roundimage2"
            leeeyou:borderRadius="60dp"
            leeeyou:type="round" />

        <com.ly.cc.custom_controls.imagePainting.RoundImageView
            android:id="@+id/riv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/roundimage1" />

    </LinearLayout>
</ScrollView>
