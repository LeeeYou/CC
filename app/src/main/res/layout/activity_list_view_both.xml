<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ly.cc.fragment.custcollect.listview.ListViewBothActivity">

    <com.ly.cc.custview.topview.TopBarView
        android:id="@+id/mTopBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        topTitle:centerText="自定义标题"
        topTitle:centerTextColor="@color/white"
        topTitle:centerTextSize="8sp"
        topTitle:leftBackground="@drawable/title_bar_back_style"
        topTitle:leftTextColor="#898989"
        topTitle:rightBackground="@color/transparent"
        topTitle:rightText="更多"
        topTitle:rightTextColor="@color/white"
        topTitle:rightTextSize="6sp" />

    <com.ly.cc.custview.listview.pullRefresh.PullToRefreshListView
        android:id="@+id/lv_county"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mTopBar" />


</RelativeLayout>
